<h1>Listing states</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <tr>
      <th>State</th>
      <th>Abbr</th>
      <th>Population</th>
      <th># of Representatives</th>
    </tr>

    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.abbreviation %></td>
        <td><%= number_with_delimiter(state.population, :delimiter => ',') %></td>
        <td><%= state.num_reps %></td>
  <!--       <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

